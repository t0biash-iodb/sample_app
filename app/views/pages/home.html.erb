<% if signed_in? %>

  <table class="front" summary="Dla zalogowanych użytkowników">
    <tr>
      <td class="main">
        <h1 class="micropost">Najnowsze wieści!</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>

<% else %>

<h1>Mini Tweet</h1>
<p>
  Strona główna aplikacji Mini Tweet.
</p>

<%= link_to "Zapisz się!", signup_path, :class => "signup_button round" %>

<% end %>